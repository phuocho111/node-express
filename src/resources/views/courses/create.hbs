<div class="mt-4">
    <h3>Add Course</h3>
    <form action="/courses/store" method="POST">
  <div class="form-group">
    <label for="name">name course</label>
    <input type="text" class="form-control" id="name" name="name">
  </div>
  <div class="form-group">
    <label for="description">description course</label>
    <input type="text" class="form-control" id="description" name="description">
  </div>
  <div class="form-group">
    <label for="videoId">Video course</label>
    <input type="text" class="form-control" id="videoId" name="videoId">
  </div>
 
  <div class="form-group">
    <label for="level">Level course</label>
    <input type="text" class="form-control" id="level" name="level">
  </div>
  
  <button type="submit" class="btn btn-primary">add course</button>
</form>
</div>